{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Multi-Cloud Infrastructure Deployment Configuration",
    "description": "Schema for defining infrastructure deployments across AWS, GCP, and Azure",
    "type": "object",
    "required": ["provider", "services", "region"],
    "properties": {
        "provider": {
            "type": "string",
            "enum": ["aws", "gcp", "azure"],
            "description": "Cloud provider: aws, gcp, or azure"
        },
        "services": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": ["type"],
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["compute.instance", "storage.object"],
                        "description": "Service type: compute.instance or storage.object"
                    },
                    "instance_id": {
                        "type": "string",
                        "description": "Unique identifier for the resource"
                    },
                    "size": {
                        "type": "string",
                        "enum": ["small", "medium", "large"],
                        "description": "Instance size: small, medium, or large"
                    },
                    "os": {
                        "type": "string",
                        "enum": ["ubuntu", "debian"],
                        "description": "Operating system: ubuntu or debian"
                    },
                    "disk_size_gb": {
                        "type": "integer",
                        "minimum": 1,
                        "description": "Disk size in GB"
                    },
                    "metadata": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "string"
                        },
                        "description": "Metadata/tags as key-value pairs"
                    },
                    "project_id": {
                        "type": "string",
                        "description": "GCP Project ID (required for GCP)"
                    },
                    "ssh_public_key": {
                        "type": "string",
                        "description": "SSH public key (optional)"
                    },
                    "admin_username": {
                        "type": "string",
                        "description": "Admin username (for Azure)"
                    },
                    "bucket_id": {
                        "type": "string",
                        "description": "Bucket ID (for storage.object)"
                    },
                    "storage_tier": {
                        "type": "string",
                        "enum": ["standard", "infrequent", "cold", "archive"],
                        "description": "Bucket ID (for storage.object)"
                    },
                    "versioning": {
                        "type": "boolean",
                        "description": "Enable object versioning"
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "compute.instance"
                                }
                            }
                        },
                        "then": {
                            "required": ["instance_id", "size", "os"]
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "storage.object"
                                }
                            }
                        },
                        "then": {
                            "required": ["bucket_id", "storage_tier", "versioning"]
                        }
                    }
                ]
            }
        },
        "subscription_id": {
            "type": "string",
            "description": "Subscription ID (for Azure)"
        },
        "region": {
            "type": "string",
            "description": "Cloud region (e.g., us-east-1, europe-west1, West Europe)"
        },
        "version": {
            "type": "string",
            "description": "Optional version identifier for this deployment"
        }
    }
}
